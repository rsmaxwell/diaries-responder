<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${env:loglevel:-INFO}">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- Log all SQL DML statements as they are executed -->
        <Logger name="org.hibernate.SQL" level="${env:hibernate_loglevel:-OFF}"/>
        <!-- Log all JDBC parameters -->
        <Logger name="org.hibernate.type" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log all SQL DDL statements as they are executed -->
        <Logger name="org.hibernate.tool.hbm2ddl" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log the state of all entities (max 20 entities) associated with the session at flush time -->
        <Logger name="org.hibernate.pretty" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log all second-level cache activity -->
        <Logger name="org.hibernate.cache" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log transaction related activity -->
        <Logger name="org.hibernate.transaction" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log all JDBC resource acquisition -->
        <Logger name="org.hibernate.jdbc" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log HQL and SQL ASTs during query parsing -->
        <Logger name="org.hibernate.hql.ast.AST" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log all JAAS authorisation requests -->
        <Logger name="org.hibernate.secure" level="${env:hibernate_loglevel:-OFF}" />
        <!-- Log everything (a lot of information, but very useful for troubleshooting) -->
        <Logger name="org.hibernate" level="${env:hibernate_loglevel:-OFF}" /> 
               
        <Logger name="org.hibernate.jpa" level="${env:hibernate_loglevel:-OFF}" />
               
        <Logger name="org.hibernate.orm" level="${env:hibernate_loglevel:-OFF}" /> 
               
        <Logger name="org.hibernate.engine" level="${env:hibernate_loglevel:-OFF}" />  
        
    </Loggers>
</Configuration>